
<h2>Set a default project allocation for <%= user.name %>. This allocation will be applied when no custom project allocation overlaps.</h2>
<%= form_for project_allocation, :url => project_user_wl_project_allocation_path do |f| %>

	<% if project_allocation.errors.any? %>
		<div class="flash error">
			<ul>
		  		<% project_allocation.errors.full_messages.each do |msg| %>
		    		<li><%= msg %></li>
		  		<% end %>
			</ul>
		</div>
	<% end %>

	<%- options = (0..100).step(5).to_a %>
	<p>Project allocation: <%= f.select :percent_alloc, options, :selected => 100 %>% <%= f.submit 'Save' %></p>
<% end %>